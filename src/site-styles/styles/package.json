{
  "name": "@metro-prez/styles",
  "version": "1.15.0",
  "description": "",
  "scripts": {
    "build-task:scss-compile": "./node_modules/.bin/sass --style expanded --source-map --embed-sources --no-error-css index.scss:index.css",
    "build-task:autoprefixer": "postcss ./*.css --use autoprefixer -d ./",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar './**/*.scss' -c 'npm run sass:build'",
    "sass-watcher": "npm-run-all -p sass:*",
    "build-readme": "./build-readme.sh",
    "dist:build": "./build-distribution.sh",
    "dist:push": "./push-distribution.sh",
    "publish:dist": "npm-run-all -s dist:build dist:push",
    "publish:all": "npm-run-all -s publish:dist",
    "precommit": "./build-readme.sh"
  },
  "author": "Soren Frederiksen",
  "license": "ISC",
  "unpkg": "index.scss",
  "jsdelivr": "index.scss",
  "module": "index.scss",
  "main": "index.scss",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.0.0",
    "sass": "^1.49.9"
  }
}
